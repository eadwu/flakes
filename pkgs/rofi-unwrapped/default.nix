  _: rec {
    version = "1590838125";

    src = fetchFromGitHub {
      owner = "davatorium";
      repo = "rofi";
      rev = "6a6216af13af243b5c232430748d11481f5ecd8b";
      sha256 = "00jfw2cq742cxvzq8rkizhgqfbw9w7zax9rhzlqr70d2p55924lx";
